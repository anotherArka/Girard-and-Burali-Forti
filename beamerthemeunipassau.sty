\mode<presentation>

\usepackage{color}
\usepackage{tikz}
\usepackage{caption}

\usepackage{textpos}

% suppress navigation bar
\beamertemplatenavigationsymbolsempty

\setbeamercovered{transparent}

% official Universität Passau colors
\definecolor{uporange}{RGB}{242,148,0}
\definecolor{upgrey}{RGB}{153,159,158}
\definecolor{upjura}{RGB}{229,49,56}
\definecolor{upphil}{RGB}{188,42,51}
\definecolor{upwiwi}{RGB}{0,96,57}
\definecolor{upfim}{RGB}{0,90,161}

\definecolor{uidarkgrey}{RGB}{125,125,125}
\definecolor{uiblack}{RGB}{0,0,0}
\definecolor{uidarkred}{RGB}{80,20,27}

% title colors
%\setbeamercolor{title}{fg=uporange}
\setbeamercolor{title}{fg=uidarkred}
\setbeamercolor{subtitle}{fg=uidarkgrey}
\setbeamercolor{author}{fg=uidarkgrey}
\setbeamercolor{institute}{fg=uidarkgrey}
\setbeamercolor{date}{fg=uidarkgrey}

% colors for specific (inner) elements
\setbeamercolor{frametitle}{fg=uidarkred}
\setbeamercolor{frametitle ruler}{fg=uidarkgrey}
\setbeamercolor{block title}{fg=uporange}
\setbeamercolor{item}{fg=uporange}
\setbeamercolor{section in toc}{fg=uidarkgrey}
\setbeamercolor{subsection in toc}{fg=uidarkgrey,bg=white}
\setbeamercolor{part title}{fg=uidarkred}

\setbeamerfont{framesubtitle}{size=\footnotesize}
\setbeamerfont{frametitle}{size=\large}

% caption styling (table, figure etc.)
\DeclareCaptionFont{uiblack}{\color{uiblack}}
\DeclareCaptionFont{uporange}{\color{uporange}}
\captionsetup{labelfont={uporange},textfont={uiblack}}

% sub-/section styling in table of contents
\setbeamertemplate{section in toc}[sections numbered]
\setbeamertemplate{subsection in toc}[default]
\AtBeginSection{\frame{\sectionpage}}

% footer colors
\setbeamercolor{footer-ruler}{fg=uidarkgrey,bg=white}
\setbeamercolor{footer}{fg=uidarkgrey,bg=white}

\setbeamertemplate{section page}
{
  \begin{centering}
    \begin{beamercolorbox}[sep=12pt,center]{part title}
      \usebeamerfont{section title}\insertsection\par
    \end{beamercolorbox}
  \end{centering}
}


% define and set header design
\setbeamertemplate{frametitle}
{%
  \vskip0.15cm%
  \hbox{%
  \begin{beamercolorbox}[leftskip=0.5cm,wd=\paperwidth,ht=0.75cm]{frametitle}%
      %\hbox{\textbf{\insertframetitle}}%
      \hbox{\insertframetitle}%
  \end{beamercolorbox}}%
  \vskip-0.55cm
  \hbox{%
  \begin{beamercolorbox}[leftskip=0.40cm,wd=\paperwidth,ht=0.10cm]{frametitle ruler}%
    \hbox{\rule{.72\paperwidth}{.5pt}}%
  \end{beamercolorbox}}%
}%


